Pipeline{
    tools{
        jdk 'myjava'
        maven 'Mymaven'
    }
    agent any
    stages{
        stage('clone a repo')
        {
            steps{
              git 'https://github.com/Samhithagaddam/DevOpsClassCodes.git'  
            }
            
        }
        stage('compile')
        {
            steps{
                sh 'mvn compile'
            }
        }
        stage('code review')
        {
            steps{
                sh 'mvn pmd:pmd'
            }
        }
        stage('unit test')
        {
            steps{
                sh 'mvn test'
            }
        }
        stage('code coverage')
        {
            steps{
                sh 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
        }
        stage('package')
        {
            steps{
                sh 'mvn package'
            }
        }
    }
    
}
